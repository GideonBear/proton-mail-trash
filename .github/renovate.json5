{
    $schema: "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices",
        ":semanticCommits",
        ":semanticCommitTypeAll(chore)",
        ":maintainLockFilesWeekly",
        ":prHourlyLimitNone",
    ],
    packageRules: [
        {
            matchDepTypes: [
                "requires-python",
            ],
            rangeStrategy: "bump",
            extractVersion: "^(?<version>\\d+\\.\\d+)",
        },
    ],
}
